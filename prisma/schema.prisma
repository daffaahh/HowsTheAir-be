generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Master Data: Daftar Stasiun yang dipantau
model MonitoredCity {
  id          Int      @id @default(autoincrement())
  uid         Int      @unique
  stationName String   // Dulu 'name', sekarang jadi label stasiun
  keyword     String   
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi: Satu stasiun punya 1 data terkini, dan banyak history
  currentAirQuality AirQuality? 
  history           AirQualityHistory[]
}

// Data Snapshot: Hanya menyimpan state TERAKHIR (Real-time)
model AirQuality {
  id              Int           @id @default(autoincrement())
  // stationName DIHAPUS, kita ambil dari relasi monitoredCity
  
  monitoredCityId Int           @unique // Foreign Key & Unique (1-to-1)
  monitoredCity   MonitoredCity @relation(fields: [monitoredCityId], references: [id])
  
  aqi             Int
  category        String
  recordedAt      DateTime
  lastSynced      DateTime      @default(now()) @updatedAt
}

// Data History: Log perjalanan kualitas udara (Time-series)
model AirQualityHistory {
  id              Int           @id @default(autoincrement())
  
  monitoredCityId Int           // Foreign Key (Bisa banyak record)
  monitoredCity   MonitoredCity @relation(fields: [monitoredCityId], references: [id])
  
  aqi             Int
  category        String
  recordedAt      DateTime
  SyncedAt        DateTime      @default(now())

  // Mencegah duplikasi history di jam yang sama untuk kota yang sama
  @@unique([monitoredCityId, recordedAt])
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  action      String   
  details     String?  
  status      String   
  performedAt DateTime @default(now())
}