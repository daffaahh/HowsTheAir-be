generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MonitoredCity {
  id          Int      @id @default(autoincrement())
  uid         Int      @unique
  stationName String   
  keyword     String   @unique 
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  currentAirQuality AirQuality? 
  history           AirQualityHistory[]
}

model AirQuality {
  id              Int           @id @default(autoincrement())
  // stationName DIHAPUS, kita ambil dari relasi monitoredCity
  
  monitoredCityId Int           @unique // Foreign Key & Unique (1-to-1)
  monitoredCity   MonitoredCity @relation(fields: [monitoredCityId], references: [id])
  
  aqi             Int
  category        String
  recordedAt      DateTime
  lastSynced      DateTime      @default(now()) @updatedAt
}

model AirQualityHistory {
  id              Int           @id @default(autoincrement())
  
  monitoredCityId Int           
  monitoredCity   MonitoredCity @relation(fields: [monitoredCityId], references: [id])
  
  aqi             Int
  category        String
  recordedAt      DateTime
  SyncedAt        DateTime      @default(now())

  @@unique([monitoredCityId, recordedAt])
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  action      String   
  details     String?  
  status      String   
  performedAt DateTime @default(now())
}